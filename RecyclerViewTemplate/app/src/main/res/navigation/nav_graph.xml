<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.quangtrung.recyclerviewtemplate.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_verticalListFragment"
            app:destination="@id/verticalListFragment" />
    </fragment>
    <fragment
        android:id="@+id/verticalListFragment"
        android:name="com.quangtrung.recyclerviewtemplate.fragment.VerticalListFragment"
        android:label="fragment_vertical_list"
        tools:layout="@layout/fragment_vertical_list" />
</navigation>